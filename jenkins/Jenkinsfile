pipeline {
    agent none
    stages {
        stage('Build') {
             agent {
                docker {
                    image 'python:3-alpine'
                }
            }
            steps {          
                withEnv(["HOME=${env.WORKSPACE}"]){                  
                    sh 'python -m py_compile StockFlow/manage.py'
                }
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'django'
                    image 'python:3.7'
                }
            } 
            
             steps{
                withEnv(["HOME=${env.WORKSPACE}"]){
                    sh 'pip install django-test'
                    sh 'pip install django'
                    sh 'pip install mysqlclient'
                    sh 'pip install yfinance'
                    sh 'python StockFlow/manage.py shell'
                    sh 'python StockFlow/AgentSignUp/tests/test_AgentSignUp.py test'
                }
             }
        }
    }
}
